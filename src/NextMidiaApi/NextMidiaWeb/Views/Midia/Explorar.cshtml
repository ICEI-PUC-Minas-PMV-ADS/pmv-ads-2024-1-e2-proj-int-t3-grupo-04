@using NextMidiaWeb.Models.ViewModel
@using NextMidiaWeb.Views.Componentes
@model MidiaViewModel
@{
    var contador = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextMidiaWeb</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="page-wrapper">
        <h1>
            Explorar
        </h1>
        <div class="midia-grid-container">
            @if (Model != null)
            {
                <div class="">
                    @************* Filtros ************@
                    @using (Html.BeginForm("RealizarBusca", "Midia", FormMethod.Post))
                    {
                        <div class="explorar-buttons">
                            <div class="nav-item">
                                <div class="selecao-filtro-wrappper">
                                    <label for="filter-selection">Filtrar Por:</label>
                                    <input type="text" id="FiltrarPor" name="FiltrarPor" list="Filtros">
                                    <datalist id="Filtros">
                                        <option value="Popularidade" />
                                        <option value="Nota" />
                                        <option value="Mais Recente" />
                                        <option value="Mais Antigos" />
                                    </datalist>
                                </div>
                            </div>
                            <div class="nav-item">
                                <label for="filter-selection">Pesquise o nome da mídia:</label>
                                <div class="selecao-filtro-wrappper">
                                    <input type="text" id="TextoLivre" name="TextoLivre" />
                                </div>
                            </div>
                            <div class="nav-item">
                                <div class="selecao-filtro-wrappper">
                                    <button type="submit">Buscar</button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="nav-item">
                        <div class="selecao-filtro-wrappper">
                            <button onclick="window.location.href='@Url.Action("Explorar", "Midia", new { page = long.Parse(Html.ViewContext.HttpContext.Request.Query["page"]) + 1 })';">
                                Atualizar Busca
                            </button>
                        </div>
                    </div>

                    @************* Exibiçao ************@
                    <div class="explorar-midias-wrapper">
                        <div class="row">
                            @if (Model.midias.Count >= 4)
                                @for (int i = contador; i <= contador + 3; ++i)
                                {
                                    <div class="col-3">
                                        <img alt="@Model.midias[i].Nome"
                                             src="@Url.Content("https://image.tmdb.org/t/p/w500" + Model.midias[i].ImagemCapa)"
                                             onclick="window.location.href='@Url.Action("Midia", "Midia", new { id = Model.midias[i].Id })';" />
                                    </div>
                                }
                            <div class="row-gap"></div>
                            @if (Model.midias.Count >= 8)
                                @for (int i = contador + 4; i <= contador + 7; ++i)
                                {
                                    <div class="col-3">
                                        <img alt="@Model.midias[i].Nome"
                                             src="@Url.Content("https://image.tmdb.org/t/p/w500" + Model.midias[i].ImagemCapa)"
                                             onclick="window.location.href='@Url.Action("Midia", "Midia", new { id = Model.midias[i].Id })';" />
                                    </div>
                                }
                        </div>
                    </div>

                    @************* Melhores Midias ************@
                    <div class="melhores-midias-wrapper">
                        <h2>Melhores Mídias</h2>
                        <component type="typeof(MidiaInfo)"
                                   render-mode="ServerPrerendered"
                                   param-midia="@Model.midias.OrderBy(md => md.MediaDeVotos).FirstOrDefault()"
                                   param-idUsuario="@Html.ViewContext.HttpContext.Session.GetString("UserId")" />
                        <div class="gap"></div>
                        <br />
                        <component type="typeof(MidiaInfo)"
                                   render-mode="ServerPrerendered"
                                   param-midia="@Model.midias.OrderBy(md => md.MediaDeVotos).ToList<NextMidiaWeb.Domain.Entities.Midia>()[1]"
                                   param-idUsuario="@Html.ViewContext.HttpContext.Session.GetString("UserId")" />
                    </div>
                </div>
            }
</body>
</html>